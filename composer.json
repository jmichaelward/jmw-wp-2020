{
    "name": "jmichaelward/jmw-wp-2020",
    "description": "A 2020 iteration of my personal site's WordPress install.",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^7.4",
        "composer/installers": "^1.8",
        "johnpbloch/wordpress-core-installer": "^1.0",
        "johnpbloch/wordpress-core": "^5.3",
        "jmichaelward/jmw-2018-theme": "^0.3",
        "symfony/dotenv": "^5.0"
    },
    "require-dev": {
        "johnbillion/query-monitor": "^3.5",
        "jmichaelward/wpcs-modified": "^0.1.0",
        "wp-cli/wp-cli-bundle": "^2.4"
    },
    "repositories": {
        "wpackagist": {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        "jmw-2018-theme": {
            "type": "git",
            "url": "https://github.com/jmichaelward/jmw-2018-theme.git"
        }
    },
    "config": {
        "vendor-dir": "public/vendor/"
    },
    "extra": {
        "wordpress-install-dir": {
            "johnpbloch/wordpress-core": "public/wp/"
        },
        "installer-paths": {
            "public/wp-content/themes/{$name}/": ["type:wordpress-theme"],
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
        }
    },
    "scripts": {
        "build-theme": "cd public/wp-content/themes/jmw-2018-theme && yarn install && yarn encore dev",
        "post-install-cmd": "@build-theme"
    }
}
